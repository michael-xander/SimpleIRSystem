               &nbsp;*/
               avl_node *avlTree::ll_rotation(avl_node *parent)
               {
                   avl_node *temp;
                   temp = parent-&gt;left;
                   parent-&gt;left = temp-&gt;right;
                   temp-&gt;right = parent;
                   return temp;
               }
