               /*
               &nbsp;* Right- Right Rotation
               &nbsp;*/
               avl_node *avlTree::rr_rotation(avl_node *parent)
               {
                   avl_node *temp;
                   temp = parent-&gt;right;
                   parent-&gt;right = temp-&gt;left;
                   temp-&gt;left = parent;
                   return temp;
               }
               /*
